{
  "name": "@hbarefoot/engram",
  "version": "1.3.0",
  "description": "Persistent memory for AI agents. SQLite for agent state.",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "engram": "bin/engram.js"
  },
  "files": [
    "bin",
    "src",
    "dashboard/dist",
    "dashboard/package.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "node bin/engram.js start",
    "mcp": "node bin/engram.js start --mcp-only",
    "dev": "concurrently \"node bin/engram.js start\" \"cd dashboard && npm run dev\"",
    "build": "cd dashboard && npm run build",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src/",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop engram",
    "pm2:restart": "pm2 restart engram",
    "pm2:delete": "pm2 delete engram",
    "pm2:logs": "pm2 logs engram",
    "pm2:status": "pm2 status engram",
    "pm2:monit": "pm2 monit",
    "build:sidecar": "node scripts/build-sidecar.js",
    "desktop:dev": "cd desktop && npm run tauri dev",
    "desktop:build": "npm run build:sidecar && cd desktop && npm run tauri build",
    "desktop:build:universal": "npm run build:sidecar && cd desktop && npm run tauri build -- --target universal-apple-darwin"
  },
  "keywords": [
    "ai",
    "agent",
    "memory",
    "mcp",
    "claude",
    "llm",
    "persistent",
    "knowledge",
    "sqlite",
    "embedding"
  ],
  "license": "MIT",
  "author": "Engram Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/HBarefoot/engram.git"
  },
  "bugs": {
    "url": "https://github.com/HBarefoot/engram/issues"
  },
  "homepage": "https://github.com/HBarefoot/engram#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "@fastify/multipart": "^9.0.0",
    "@fastify/static": "^8.3.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@xenova/transformers": "^2.17.0",
    "better-sqlite3": "^11.0.0",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^12.0.0",
    "fastify": "^5.0.0",
    "ora": "^8.2.0",
    "yaml": "^2.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "concurrently": "^9.0.0",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "vitest": "^2.0.0"
  }
}
