{
  "name": "engram",
  "version": "1.0.0",
  "description": "Persistent memory for AI agents. SQLite for agent state.",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "engram": "bin/engram.js"
  },
  "scripts": {
    "start": "node bin/engram.js start",
    "mcp": "node bin/engram.js start --mcp-only",
    "dev": "concurrently \"node bin/engram.js start\" \"cd dashboard && npm run dev\"",
    "build": "cd dashboard && npm run build",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src/",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop engram",
    "pm2:restart": "pm2 restart engram",
    "pm2:delete": "pm2 delete engram",
    "pm2:logs": "pm2 logs engram",
    "pm2:status": "pm2 status engram",
    "pm2:monit": "pm2 monit"
  },
  "keywords": [
    "ai",
    "agent",
    "memory",
    "mcp",
    "claude",
    "llm",
    "persistent",
    "knowledge",
    "sqlite",
    "embedding"
  ],
  "license": "MIT",
  "author": "Engram Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/engram.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/engram/issues"
  },
  "homepage": "https://github.com/your-username/engram#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "better-sqlite3": "^11.0.0",
    "fastify": "^5.0.0",
    "@fastify/static": "^8.0.0",
    "@fastify/multipart": "^9.0.0",
    "@fastify/cors": "^10.0.0",
    "commander": "^12.0.0",
    "@xenova/transformers": "^2.17.0",
    "yaml": "^2.4.0"
  },
  "devDependencies": {
    "vitest": "^2.0.0",
    "eslint": "^9.0.0",
    "concurrently": "^9.0.0"
  }
}
