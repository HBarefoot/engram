{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "Engram",
  "version": "1.4.2",
  "identifier": "com.engram.app",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "bundle": {
    "active": true,
    "targets": ["app"],
    "icon": ["icons/icon.icns", "icons/icon.png", "icons/icon-512.png", "icons/icon-256.png", "icons/icon-128.png", "icons/icon-32.png"],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "resources": ["resources/**/*"]
  },
  "app": {
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval'; connect-src http://localhost:* https://localhost:* ws://localhost:*; img-src 'self' data: blob:; font-src 'self' data:"
    },
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Engram",
        "width": 900,
        "height": 600,
        "resizable": true,
        "visible": false,
        "center": true
      }
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
